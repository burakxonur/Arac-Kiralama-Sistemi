@model List<ResultCarFeatureByCarIDDto>

<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
    <div class="row">
        @foreach (var group in Model.Select((item, index) => new { item, index }).GroupBy(x => x.index / 5))
        {
            <div class="col-md-4">
                <ul class="features">
                    @foreach (var g in group)
                    {
                        if (g.item.Available == true)
                        {
                            <li class="check"><span class="ion-ios-checkmark"></span>@g.item.FeatureName</li>
                        }
                        else
                        {
                            <li class="remove"><span class="ion-ios-close"></span>@g.item.FeatureName</li>
                        }
                    }
                </ul>
            </div>
        }
    </div>
</div>
