@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayaout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="col-xl-12">
			<div class="card-body">
				<h4 class="card-title">Hakkımızda Yazısı</h4>
				<p class="card-subtitle mb-4">
					<code class="highlighter-rouge">
						Hakkımızda Yazısını Aşağıdan Güncelleyebilirsiniz..
					</code>.
				</p>
				<form method="post">
					<div class="form-group">
						<label for="exampleInputTitle">Hakkımızda Başlığı </label>
						<input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Başlık">
					</div>
					<input type="hidden" asp-for="aboutID"/>
					<div class="form-group">
						<label for="exampleInputDescription">Hakkımızda İçerik </label><br />
						<textarea asp-for="description"
								  placeholder="Hakkımızda İçerik Yazısını Ekleyebilirsiniz."
								  style="min-height: 160px; width: 100%; resize: vertical; padding: 0.5rem; border: 1px solid #ccc; border-radius: 0.375rem; font-size: 0,9rem; line-height: 1.5; overflow-y: auto;"
								  aria-label="Hakkımızda İçeriği Yazın">
						</textarea>

					</div>
					<div class="form-group">
						<label for="exampleInputVideoimageUrl">Hakkımızda Görsel </label>
						<input type="text" class="form-control" id="exampleInputVideoimageUrl" asp-for="imageUrl" placeholder="Hakkımızda Görsel">
					</div>

					<div class="container-fluid p-0 mt-4">
						<button type="submit" class="full-width-btn">
							<span class="btn-icon">✓</span><span class="btn-text">HAKKIMIZDA GÜNCELLE</span>
						</button>
					</div>
					<style>
						.full-width-btn {
							width: 100%;
							padding: 18px;
							font-size: 1.1rem;
							font-weight: 700;
							color: white;
							text-transform: uppercase;
							letter-spacing: 0.5px;
							background: linear-gradient(to right, #28a745, #28a745);
							border: none;
							border-radius: 8px;
							cursor: pointer;
							transition: all 0.3s ease;
							display: flex;
							align-items: center;
							justify-content: center;
							gap: 12px;
							box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
						}

							.full-width-btn:hover {
								background: linear-gradient(to right, #28a745, #28a745);
								transform: translateY(-2px);
								box-shadow: 0 6px 20px rgba(37, 99, 235, 0.4);
							}

							.full-width-btn:active {
								transform: translateY(0);
							}

						.btn-icon {
							font-size: 1.3rem;
							font-weight: bold;
						}
					</style>
				</form>
			</div>
		</div>
	</div>
</div>

